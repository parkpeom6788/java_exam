		int num2 = sc.nextInt();
		
		System.out.println("========결과========");
		
		switch(num1)  {
		case 1:
			str1 = "가위";
			break;
		case 2:
			str1 = "바위";
			break;
		case 3:
			str1 = "보";
		}
		switch(num2) {
			
		}
		
		
	}
}
