package java_exam;

public class flag2 {
	
	public static void main(String[] args) {
		
		
		int hol = 0 , jjak = 0;
		int flag = 0 ;
		
		for(int i = 0 ; i <= 10; i++) {
			if(flag == 0) {
				jjak += i;
				flag = 1;
			} else if(flag == 1) {
				hol += i;
				flag = 0;
			}
		}
		System.out.println("홀수의 합 : " + hol);
		System.out.println("짝수의 합 : " + hol);
		
	}
}
